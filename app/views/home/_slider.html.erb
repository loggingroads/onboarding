      <h2 class="text text-module-subtitle -dark"><%= t('views.home.index._slider.subtitle') %></h2>
      <h1 class="text text-module-title -primary"><%= t('views.home.index._slider.title') %></h1>
      <p class="text text-p -dark"><%= t('views.home.index._slider.description') %></p>
    </div>
    <div class="activity-data wrap">
      <div class="activity-section -task">
        <div class="content-img"></div>
        <h3 class="text text-p-title -dark"><%= t('views.home.index._slider.tasking_manager.step_one_title') %></h3>
        <p class="text text-legend -darker"><%= t('views.home.index._slider.tasking_manager.step_one_legend') %></p>
