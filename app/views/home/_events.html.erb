<div class="wrap">
  <div class="row">
    <h2 class="text text-module-subtitle -primary"><%= t('views.home.index._events.subtitle') %></h2>
    <h1 class="text text-module-title -light"><%= @event.name %></h1>
    <div class="events-content">
      <p class="text text-p -light"><%= @event.description %></p>
      <p class="event-date text text-module-subtitle -light"><%= @event.date.strftime("%B the #{@event.date.day.ordinalize}") %>.</p>
    </div>
    <div class="event-participate">
      <button class="bttn bttn-secondary"><%= link_to t('views.home.index._events.btn'), @event.url %></button>
      <p class="text text-menu -light"><%= link_to t('views.home.index._events.tell_us'), new_event_request_path %></p>
    </div>
  </div>
</div>
