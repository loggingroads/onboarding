<div id="mapathon">
  <section class="campaign-main section" id="mapathon-main">
    <article class="c-intro content-fluid">
      <ul class="c-routes wrap text text-desc -light">
        <!-- Paths to set -->
        <li class="route">Participate</li>
        <li class="route"><%= link_to 'Mapathons', events_path, {:class => 'route-link'} %></li>
      </ul>

      <aside class="wrap row">
        <div class="col-sm-12 col-md-5">
          <h1 class="title text text-module-subtitle -light">Mapathon</h1>
          <ul class="tags-list text text-tag -light">
            <li class="tag">Tag 1</li>
            <li class="tag">Tag 2</li>
            <li class="tag">Tag 3</li>
          </ul>
          <p class="text text-desc -light">Description vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Integer pio posuere erat a ante venenatis dapi, ctetur, sed do. </p>
        </div>
      </aside>
    </article>

    <article class="content content-fluid" id="data-view">
      <div class="wrap row">
        <div class="c-pagination col-xs-12 col-sm-6 col-sm-offset-3">
          <!-- Implements the pagination once we get the campaigns (@campaigns) -->
          <% if @campaigns %>
            <%= will_paginate @campaigns, :previous_label => '<', :next_label => '>' %>
          <% end %>
        </div>
      </div>

    </article>
  </section>
</div>


