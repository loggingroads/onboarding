<section class="campaign-main">
  <article class="campaign-intro">
    <nav class="routes wrap-back">
      <ul class="text text-desc -light navigator">
        <li class="route"><%= link_to 'Participate', 'admin/', { :class => current_class('admin/participate') + 'route-link'} %></li>
        <li class="route"><%= link_to 'Campaign', 'admin/campaigns', {:class => current_class('admin/campaigns') + 'route-link'} %></li>
      </ul>
    </nav>
    <article class="wrap-back">
      <h1 class="text text-module-subtitle -light">Campaigns</h1>
      <ul class="tags-list text text-tag -light">
        <li class="tag">Tag 1</li>
        <li class="tag">Tag 2</li>
        <li class="tag">Tag 3</li>
      </ul>
      <p class="text text-desc -light">Description vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Integer pio posuere erat a ante venenatis dapi, ctetur, sed do. </p>
    </article>
  </article>
  <article class="campaigns">
     <div class="col-lg-12 wrap-back">
      <div class="input-group">
        <input type="text" class="form-control search" placeholder="Search">
        <span class="input-group-btn">
          <img src="" class="search-icon" />
        </span>
      </div>
    </div>
    <table class="table">
      <thead>
      <tr>
        <th></th>
        <th class="text text-menu -dark">Start date</th>
        <th class="text text-menu -dark">Campaign Name</th>
        <th class="text text-menu -dark">Tags</th>
      </tr>
      </thead>

      <tbody data-role="activerecord_sortable">
        <%= render @campaigns %>
      </tbody>
    </table>
    <br>
  </article>
</section>
