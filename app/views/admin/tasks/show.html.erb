<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Task manager url:</strong>
  <%= @task.task_manager_url %>
</p>

<p>
  <strong>Task type:</strong>
  <%= @task.task_type %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @task.image.url(:medium) %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>Location:</strong>
  <%= @task.location %>
</p>

<%= link_to 'Edit', edit_admin_task_path(@task), class: 'btn btn-primary' %>
<%= link_to 'Back', admin_tasks_path, class: 'btn btn-secondary' %>
