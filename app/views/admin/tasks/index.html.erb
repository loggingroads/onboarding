<h1>Tasks</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Task manager url</th>
      <th>Task type</th>
      <th>Description</th>
      <th>Image</th>
      <th>Status</th>
      <th>Location</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.task_manager_url %></td>
        <td><%= task.task_type %></td>
        <td><%= task.description %></td>
        <td><%= task.image %></td>
        <td><%= task.status %></td>
        <td><%= task.location %></td>
        <td><%= link_to 'Show', admin_task_path(task) %></td>
        <td><%= link_to 'Edit', edit_admin_task_path(task) %></td>
        <td><%= link_to 'Destroy', admin_task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_admin_task_path, class: 'btn btn-primary' %>
