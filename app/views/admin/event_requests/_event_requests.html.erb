<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table">
  <thead>
    <tr>
      <th class="sortable"><%= sortable "name" %></th>
      <th>Description</th>
      <th>Location</th>
      <th>Potential date</th>
      <th>Experience level</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for event_request in @event_requests %>
      <tr>
        <td class="-bold"><%= event_request.name %></td>
        <td><%= event_request.description %></td>
        <td><%= event_request.location %></td>
        <td><%= event_request.potential_date %></td>
        <td><%= event_request.experience_level %></td>
        <td><%= event_request.email %></td>
        <td class="actions">
          <%= link_to '', admin_event_request_path(event_request), :class => "svg-bttn -show" %>
          <%= link_to '', edit_admin_event_request_path(event_request), :class => "svg-bttn -edit" %>
          <%= link_to '', admin_event_request_path(event_request), method: :delete, data: {confirm: 'Are you sure?'}, :class => "svg-bttn -delete"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @event_requests, previous_label: '<', next_label: '>' %>
