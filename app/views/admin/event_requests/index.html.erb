<div class="index-title wrap">
  <h1>Event Requests</h1>
  <%= link_to 'New Event Request', new_admin_event_request_path, class: 'bttn bttn-primary' %>
</div>

<div class="search wrap">
  <input type="text" class="search-input" placeholder="Search" />
  <svg class="icon icon-search">
    <use xlink:href="#icon-search"></use>
  </svg>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Potential date</th>
      <th>Experience level</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @event_requests.each do |event_request| %>
      <tr>
        <td><%= event_request.name %></td>
        <td><%= event_request.description %></td>
        <td><%= event_request.location %></td>
        <td><%= event_request.potential_date %></td>
        <td><%= event_request.experience_level %></td>
        <td><%= event_request.email %></td>
        <td class="actions">
          <%= link_to '', admin_event_request_path(event_request), :class => "svg-bttn -show" %>
          <%= link_to '', edit_admin_event_request_path(event_request), :class => "svg-bttn -edit" %>
          <%= link_to '', admin_event_request_path(event_request), method: :delete, data: { confirm: 'Are you sure?' }, :class => "svg-bttn -delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
