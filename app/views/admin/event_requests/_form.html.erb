<div class="form-wrap">
  <%= form_for([:admin, event_request]) do |f| %>
    <% if event_request.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event_request.errors.count, "error") %> prohibited this event_request from being saved:</h2>

          <ul>
            <% event_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset class="form-group row">
      <%= f.label :name, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10"><%= f.text_field :name, class: 'form-control', class: 'form-control' %></div>
    </fieldset>

    <fieldset class="form-group row">
      <%= f.label :description, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </fieldset>

    <fieldset class="form-group row">
      <%= f.label :location, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10"><%= f.text_field :location, class: 'form-control' %></div>
    </fieldset>

    <fieldset class="form-group row">
      <%= f.label :potential_date, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10"><%= f.text_field :potential_date, {class: 'form-control datepicker'} %></div>
    </fieldset>

    <fieldset class="form-group row">
      <%= f.label :experience_level, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10"><%= f.text_field :experience_level, class: 'form-control' %></div>
    </fieldset>

    <fieldset class="form-group row">
      <%= f.label :email, class: 'col-sm-2 form-control-label' %>
      <div class="col-sm-10"><%= f.text_field :email, class: 'form-control' %></div>
    </fieldset>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-10 form-control-btns">
        <%= link_to 'Cancel', admin_event_requests_path, class: 'bttn bttn-secondary' %>
        <%= f.submit class: 'bttn bttn-primary' %>
      </div>
    </div>
  <% end %>
</div>
