<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Osm</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody data-role="activerecord_sortable">
    <% @users.each do |user| %>
      <tr>
        <td>
          <svg class="icon icon-Row-Dragger">
            <use xlink:href="#icon-Row-Dragger"></use>
          </svg>
        </td>
        <td><%= user.name %></td>
        <td><%= user.osm_id %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: 'bttn bttn-primary' %>
