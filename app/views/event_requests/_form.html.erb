<div class="form-wrap">
  <%= form_for(event_request) do |f| %>
    <% if event_request.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(event_request.errors.count, "error") %> prohibited this event_request from being saved:</h3>

          <ul>
            <% event_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <fieldset class="form-group row required">
      <%= f.label :name, class: 'col-sm-3 form-control-label' %>
      <div class="col-sm-9"><%= f.text_field :name, class: 'form-control', class: 'form-control' %></div>
    </fieldset>

    <fieldset class="form-group row">
      <%= f.label :description, class: 'col-sm-3 form-control-label' %>
      <div class="col-sm-9">
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </fieldset>

    <fieldset class="form-group row required">
      <%= f.label :location_name, class: 'col-sm-3 form-control-label' %>
      <div class="col-sm-9"><%= f.text_field :location_name, class: 'form-control', class: 'form-control' %></div>
    </fieldset>

    <fieldset class="form-group row required">
      <%= f.label :potential_date, class: 'col-sm-3 form-control-label' %>
      <div class="col-sm-9"><%= f.text_field :potential_date, {class: 'form-control datepicker'} %></div>
    </fieldset>

    <fieldset class="form-group row">
      <%= f.label :experience_level, class: 'col-sm-3 form-control-label' %>
      <div class="col-sm-9"><%= f.select :experience_level, options_for_select(["Firs time organizing such an event", "Organized mapathons before", "Organized similar events"]), {}, class: 'form-control' %></div>
    </fieldset>

    <fieldset class="form-group row required">
      <%= f.label :email, class: 'col-sm-3 form-control-label' %>
      <div class="col-sm-9"><%= f.text_field :email, class: 'form-control' %></div>
    </fieldset>

    <div class="form-group row">
      <div class="col-sm-offset-3 form-control-btns">
        <%= f.submit class: 'bttn bttn-primary' %>
      </div>
    </div>
  <% end %>
</div>
