<p id="notice"><%= notice %></p>

<h1>Campaigns</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Htag</th>
      <th>Description</th>
      <th>Background image</th>
      <th>Url</th>
      <th>Status</th>
      <th>Order sequence</th>
      <th>Start date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.htag %></td>
        <td><%= campaign.description %></td>
        <td><%= campaign.background_image %></td>
        <td><%= campaign.url %></td>
        <td><%= campaign.status %></td>
        <td><%= campaign.order_sequence %></td>
        <td><%= campaign.start_date %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign', new_campaign_path, class: 'btn btn-primary' %>
